{
    "manifest_version": 3,
    "name": "Motivação Diária",
    "version": "1.0.0",
    "description": "Mostra uma frase motivacional sempre que você precisar.",
    "icons": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "action": {
      "default_title": "Motivação Diária",
      "default_popup": "src/popup/popup.html"
    },
    "background": {
      "service_worker": "src/background/service-worker.js"
    },
    "permissions": ["storage"],
    "host_permissions": ["https://developer.chrome.com/*"],
    "content_scripts": [
      {
        "matches": ["https://developer.chrome.com/*"],
        "js": ["src/content/content.js"],
        "run_at": "document_idle"
      }
    ]
  }
  